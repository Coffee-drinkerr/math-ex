<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="Math Exercise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/rightId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="right:0"
            android:background="#57F527"/>

        <TextView
            android:id="@+id/markId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="mark:0"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/wrongId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="wrong:0"
            android:background="#F52727"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/singleId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Single" />

        <Button
            android:id="@+id/till20Id"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text="Till20" />

        <Button
            android:id="@+id/chalngeId"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text="Chalnge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num1Id"
                android:layout_width="348dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                android:background="#FFA500"
                android:gravity="center"
                android:text=""
                android:textSize="60sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="348dp"
                android:layout_height="85dp"
                android:text="x"
                android:textSize="50dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/num2Id"
                android:layout_width="348dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                android:background="#FFA500"
                android:gravity="center"
                android:text=""
                android:textSize="50sp" />

            <EditText
                android:id="@+id/answerId"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:ems="10"
                android:inputType="text"
                android:text="Answer"
                android:gravity="center"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/checkId"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:gravity="center"
                android:text="Check"
                android:textSize="50sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>